<!--- 浮动面板最小化按钮默认皮肤.

@see spark.skins.spark.TitleWindowSkin
@see spark.components.TitleWindow

@langversion 3.0
@playerversion Flash 10
@playerversion AIR 1.5
@productversion Flex 4
-->
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
    alpha.disabled="0.5"
    xmlns:mx="library://ns.adobe.com/flex/mx">

    <!-- host component -->
    <fx:Metadata>
        <![CDATA[ 
		/** 
		* @copy spark.skins.spark.ApplicationSkin#hostComponent
		*/
		[HostComponent("spark.components.Button")]
		]]>
    </fx:Metadata>

    <s:states>
        <s:State name="up"/>
        <s:State name="over"/>
        <s:State name="down"/>
        <s:State name="disabled"/>
    </s:states>

    <!--- Define the drop shadow for the close button. -->
    <s:RectangularDropShadow id="dropShadow"
        left="0" right="0" top="0" bottom="0"
        color="0xFFFFFF"
        blurX="0"
        blurY="0"
        alpha="0"
        alpha.over="0.85"
        alpha.down=".85"
        distance="1"
        angle="90"/>

    <!--- Define the border and fill. -->
    <s:Rect 
        left="0" right="0" top="0" bottom="0">
        <s:stroke>
            <s:SolidColorStroke 
                color="0x000000"
                alpha="0.0"
                alpha.over="0.7"
                alpha.down="0.7"
                weight="1"/>
        </s:stroke>
        <s:fill>
            <s:SolidColor 
                color="0xCCCCCC"
                alpha="0"
                alpha.down="0.7"/>
        </s:fill>
    </s:Rect>

    <!--- Define the inner shadow. -->
    <s:Rect id="cbshad"
        height="1"
        left="1" right="1" top="1">
        <s:fill>
            <s:SolidColor 
                color="0x000000"
                color.over="0xFFFFFF"
                alpha="0"
                alpha.over=".85"
                alpha.down="0.22"/>
        </s:fill>
    </s:Rect>

    <mx:Image id="minButton"
        width="20" height="18"
        source="assets/images/panel_min.png"/>

</s:SparkSkin>
